{
  "name": "CookieStore",
  "version": "1.0",
  "description": "Sell your tracking cookies for cash!",
  "permissions": ["declarativeContent", "notifications", "storage", "webRequest", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/cookie16.png",
    "32": "images/cookie32.png",
    "48": "images/cookie48.png",
    "128": "images/cookie128.png"
  },
  "web_accessible_resources": [
    "images/cookie48.png",
    "images/tick24.png",
    "images/cross24.png"
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "manifest_version": 2
}
